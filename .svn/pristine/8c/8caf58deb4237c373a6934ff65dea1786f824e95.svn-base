<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_simple_5dp_corners"
        android:orientation="vertical">

        <TextView
            style="@style/text_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_simple_5dp_corner_top"
            android:clickable="true"
            android:gravity="center"
            android:padding="12dp"
            android:text="选择方式" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_status"
            android:gravity="center"
            android:padding="15dp"
            android:text="拍照"
            android:textColor="#1c83c6"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/select_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_simple_5dp_corner_bottom"
            android:gravity="center"
            android:padding="15dp"
            android:text="从相册选择"
            android:textColor="#1c83c6"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_simple_5dp_corner_all"
        android:gravity="center"
        android:padding="15dp"
        android:text="取消"
        android:textColor="#1c83c6"
        android:textSize="15sp" />
</LinearLayout>