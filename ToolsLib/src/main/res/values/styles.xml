<resources xmlns:android="http://schemas.android.com/tools">


    <style name="AppThemeNoTitle" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowContentTransitions">true</item>-->
        <!--<item name="android:statusBarColor">@color/colorAccentDark</item>-->
        <item name="android:windowBackground">@color/bg_windows</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="lb_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowContentTransitions">true</item>-->
        <!--<item name="android:statusBarColor">@color/colorAccentDark</item>-->
        <item name="android:windowBackground">@color/bg_windows</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TranslateBackground" parent="lb_AppTheme">
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="FullScreen" parent="lb_AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Splash" parent="FullScreen">
        <item name="android:windowBackground">@drawable/splash_1</item>
    </style>


    <style name="CheckBox_collection" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_collection</item>
    </style>


    <style name="mProgress_horizontal_webView">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal_web_view
        </item><!-- progress_horizontal -->
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>
</resources>
